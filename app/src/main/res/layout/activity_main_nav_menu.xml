<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainNavMenuActivity">

    <RelativeLayout
        android:id="@+id/android_lar"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:background="@drawable/main_nav_menu"
        android:clipToOutline="true"
        tools:ignore="MissingConstraints,RedundantNamespace,UnusedAttribute">

        <Button
            android:id="@+id/routebtn"
            android:layout_width="292dp"
            android:layout_height="80dp"
            android:layout_marginLeft="60dp"
            android:layout_marginTop="410dp"
            android:background="#00ff0000" />

        <Button
            android:id="@+id/surbtn"
            android:layout_width="292dp"
            android:layout_height="80dp"
            android:layout_marginLeft="60dp"
            android:layout_marginTop="507dp"
            android:background="#00ff0000" />

        <Button
            android:id="@+id/favbtn"
            android:layout_width="292dp"
            android:layout_height="80dp"
            android:layout_marginTop="600dp"
            android:layout_marginLeft="60dp"
            android:background="#00ff0000" />

        <Button
            android:id="@+id/setbtn"
            android:layout_width="294dp"
            android:layout_height="40dp"
            android:layout_marginTop="698dp"
            android:layout_marginLeft="59dp"
            android:background="#00ff0000" />

    </RelativeLayout>

</LinearLayout>