<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainNavSearchActivity">

    <RelativeLayout
        android:id="@+id/android_lar"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:background="@drawable/main_nav_search"
        android:clipToOutline="true"
        tools:ignore="MissingConstraints,RedundantNamespace,UnusedAttribute">

        <EditText
            android:id="@+id/editTextTextPersonName"
            android:layout_width="320dp"
            android:layout_height="70dp"
            android:layout_marginTop="63dp"
            android:layout_marginLeft="45dp"
            android:inputType="textPersonName"
            android:hint="주소 및 장소 검색"
            android:textColorHint="#eaeaea"
            android:textSize="35dp"
            android:textColor="#ffffff"
            android:textStyle="bold"
            android:background="@null" />

        <Button
            android:id="@+id/btn1"
            android:layout_width="373dp"
            android:layout_height="115dp"
            android:layout_marginTop="175dp"
            android:layout_marginLeft="18dp"
            android:background="#00ff0000" />

        <Button
            android:id="@+id/button2"
            android:layout_width="373dp"
            android:layout_height="65dp"
            android:layout_marginTop="310dp"
            android:layout_marginLeft="18dp"
            android:background="#00ff0000" />

        <Button
            android:id="@+id/button3"
            android:layout_width="373dp"
            android:layout_height="65dp"
            android:layout_marginTop="392dp"
            android:layout_marginLeft="18dp"
            android:background="#00ff0000" />

        <Button
            android:id="@+id/button4"
            android:layout_width="373dp"
            android:layout_height="115dp"
            android:layout_marginTop="475dp"
            android:layout_marginLeft="18dp"
            android:background="#00ff0000" />

        <Button
            android:id="@+id/button5"
            android:layout_width="373dp"
            android:layout_height="65dp"
            android:layout_marginTop="610dp"
            android:layout_marginLeft="18dp"
            android:background="#00ff0000" />

        <Button
            android:id="@+id/button6"
            android:layout_width="373dp"
            android:layout_height="65dp"
            android:layout_marginTop="692dp"
            android:layout_marginLeft="18dp"
            android:background="#00ff0000" />

        <Button
            android:id="@+id/button7"
            android:layout_width="373dp"
            android:layout_height="65dp"
            android:layout_marginTop="777dp"
            android:layout_marginLeft="18dp"
            android:background="#00ff0000" />
    </RelativeLayout>

</LinearLayout>